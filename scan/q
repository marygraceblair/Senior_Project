from django.db import models
from django.contrib.postgres.fields import ArrayField
from datetime import datetime

class Food(models.Model):
    name = models.CharField(max_length=50,  primary_key = True )

class Inventory(models.Model):
    material = models.CharField(max_length=30)
    quantity = models.IntegerField(default=0)
    units = models.CharField(max_length=30)
    date = models.DateTimeField(auto_now_add=True, blank=True)

    def __str__(self):
        return '%s %s %s'%(self.material, self.quantity, self.units)

class Receipt(models.Model):
    #use autogenerated id as primary key 
    total_spent = models.FloatField(default=0)
    #date/time is the date/time that the receipt was scanned
    date = models.DateTimeField(default=datetime.now)
    #add day of the week functionality later
    items = models.ManyToManyField(Food, through='ListItem')

class ListItem(models.Model):
    food = models.ForeignKey(Food, on_delete = models.CASCADE)
    receipt = models.ForeignKey(Receipt, on_delete = models.CASCADE)
    price = models.FloatField( default=0)
    amount = models.FloatField(default=0)

class Survey(models.Model):
    receipt = models.ManyToManyField(Receipt)
    items = models.ManyToManyField(ListItem)


## Create your models here.
